<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="MoteqProductInquiry\Core\Content\ProductInquiry\ProductInquiryDefinition">
            <tag name="shopware.entity.definition" entity="moteq_product_inquiry"/>
        </service>

        <service id="MoteqProductInquiry\Core\Content\Product\ProductExtension">
            <tag name="shopware.entity.extension" />
        </service>

        <service id="MoteqProductInquiry\Subscriber\ProductInquiryAnsweredSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument id="mailer" key="$mailer" type="service" />
            <argument id="moteq_product_inquiry.repository" key="$moteqInquiryRepoEntityRepository" type="service" />
            <argument id="product.repository" key="$productEntityRepository" type="service" />
        </service>

    </services>
</container>
